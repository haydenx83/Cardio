<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".MusicActivity"
    android:background="@color/background_material_dark"
    android:id="@+id/musicAct"
    android:gravity="bottom">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/CoverArt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:background="@drawable/ic_notification"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="false"
        android:layout_alignStart="@+id/songName"
        android:layout_alignEnd="@+id/songName" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/play"
        android:background="@android:drawable/ic_media_pause"
        android:visibility="visible"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/CoverArt"
        android:layout_toEndOf="@+id/imageView"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/stop"
        android:background="@drawable/stop"
        android:padding="0dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/anchor"
        android:layout_alignEnd="@+id/CoverArt"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/skip"
        android:background="@android:drawable/ic_media_next"
        android:visibility="visible"
        android:layout_marginRight="5dp"
        android:layout_above="@+id/songName"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/stop" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/anchor"
        android:layout_alignTop="@+id/CoverArt"
        android:layout_alignStart="@+id/CoverArt"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:layout_above="@+id/CoverArt" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/songName"
        android:visibility="visible"
        android:textColor="#ffffffff"
        android:textAlignment="center"
        android:layout_below="@+id/CoverArt"
        android:layout_toEndOf="@+id/imageView" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@+id/songName"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/play"
        android:background="#ffa3a3a3" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/dur"
        android:textColor="#ffffffff"
        android:text="Duration"
        android:layout_below="@+id/progressBar"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/prev"
        android:background="@android:drawable/ic_media_previous"
        android:visibility="visible"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/skip"
        android:layout_alignEnd="@+id/play"
        android:layout_above="@+id/songName"
        android:layout_below="@+id/play" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/musicListView"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:footerDividersEnabled="false"
        android:foregroundGravity="bottom|left|top"
        android:background="@color/button_material_light"
        android:focusable="false"
        android:layout_alignEnd="@id/musicAct"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/expand" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/expand"
        android:textColor="#ffffffff"
        android:textAlignment="center"
        android:layout_below="@+id/dur"
        android:background="@android:drawable/arrow_up_float" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/collapse"
        android:textColor="#ffffffff"
        android:textAlignment="center"
        android:background="@android:drawable/arrow_down_float"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout>